{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  /**
   * 'off' / 0 - 关闭规则
   * 'warn' / 1 - 开启规则
   * 'error' / 2 - 开启规则，使用错误级别的错误（当触发时，程序会退出） 
   */
  "rules": {
    "no-console": "off", // 不允许出现console语句
    "space-in-parens": [ 0, "always" ], // 强制在圆括号内使用一致的空格
    "template-curly-spacing": [ 2, "always" ], // 要求或禁止模板字符串中的嵌入表达式周围空格的使用
    "array-bracket-spacing": [ 2, "always" ], // 指定数组的元素之间要以空格隔开(, 后面)， never参数：[ 之前和 ] 之后不能带空格，always参数：[ 之前和 ] 之后必须带空格
    "computed-property-spacing": [ 2, "always" ], // 以方括号取对象属性时，[ 后面和 ] 前面需要空格 （ 与数组保持一致 ）
    "no-multiple-empty-lines": [ 2, { "max": 1, "maxEOF": 0, "maxBOF": 0 } ], // 不允许多个空格
    "quotes": [ 1, "single", "avoid-escape" ], // 强制使用一致的反钩号，双引号或单引号
    "no-use-before-define": [ 2, { "functions": false } ], // 不允许在变量定义之前使用它们（ 函数可以 ）
    "semi": [ 0, "never" ], // 要求或禁止使用分号而不是ASI
    "prefer-const": 1, // 要求使用 const 声明那些声明后没有再修改的变量
    "react/prefer-es6-class": 0, // 为react组件强制执行ES5或ES6类
    "react/jsx-filename-extension": 0,
    "react/jsx-curly-spacing": [ 2, "always" ], // 在Jsx属性和表达式中加强或禁止大括号内的空格
    "react/jsx-indent": [ 2, 4 ], 
    "react/prop-types": [ 1 ], // 防止在React组件定义中丢失props验证
    "react/no-array-index-key": [ 1 ], // 防止在数组中遍历使用数组key作为索引
    "no-case-declarations": [ 1 ], // 禁止词法声明（let、const、function 和 class）出现在case或default子句中
    "no-param-reassign": [ 1 ], // 不允许重新分配函数参数
    "no-shadow": [ 1 ], // 外部作用域中的变量不能与它所包含的作用域中的变量或参数同名
    "camelcase": [ 1 ], // 强制使用驼峰命名规则
    "no-unused-vars": [ 1 ], // 不允许有声明后未使用的变量或者参数
    "no-underscore-dangle": [ 0, "always" ]  // 不允许标识符以下划线开头
  }
}